.input
  margin 5px
  padding 10px
  width 35%
  height 500px
  border 1px solid $color-complement-1
  background $color-primary-1
  overflow-x hidden
  overflow-y auto
  overflow-wrap break-word
  resize none
  color $color-secondary-2-3
  font-family monospace
  font-size 23px

  &:focus
    outline none

  .num
    padding 0 5px

    &:focus
      border-bottom 2px solid $color-secondary-1-3
      outline none

  .comma
    margin-right 10px
    color $color-complement-2

  .bracket
    color $color-secondary-1-3

  span
    word-break break-all
  
  &, span  
    &::selection
      color $color-primary-1
      background $color-complement-3